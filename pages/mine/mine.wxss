/* pages/mine/mine.wxss */

.container {
      display: flex;
      flex-direction: column;
      align-items: center;
}

.mineTopImgBg {
      width: 100%;
      height: 320rpx;
}

.topView{
      position: absolute;
      display: flex;
      flex-direction: column;
      left: 0px;
      margin-left: 20rpx
}

.topTvNameType{
      color: white;
      font-size: 18px;
      margin-top: 10rpx
}

.topTvType{
      color: white;
      margin-top: 10rpx;
      font-size: 14px;
}

.userinfo {
      position: absolute;
      top: 180rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
}

.userinfo-avatar {
      width: 128rpx;
      height: 128rpx;
      margin: 20rpx;
      border-radius: 50%;
}

.userinfo-nickname {
      color: #aaa;
}

.commonViewCenter {
      display: flex;
      flex-direction: column;
      align-items: center;
}

.commonViewCenter text {
      margin-top: 10rpx;
      font-size: 14px
}

.commonTvType{
      font-size: 15px;
      color: black
}

.commonPadding{
      padding-top: 12rpx;
      padding-bottom: 12rpx;
}

.viewHorizon {
      width: 600rpx;
      height: 1px;
      background-color: #e5e5e5;
      vertical-align: middle;
      margin-top: 10rpx;
}

.viewHorizonMatch {
      width: 100%;
      height: 1px;
      background-color: #e5e5e5;
      vertical-align: middle;
      margin-top: 10rpx;
}

.editorMoreBtnIcon{
      width: 20rpx;
      height: 20rpx;
      position:absolute;
      right:20rpx;
      margin-top: 20rpx

}

.btnSignOut{
      width: 600rpx;
      height: 70rpx;
      background-color: #fe4f56;
      color: white;
      font-size: 15px;
      margin-top: 50rpx
}

